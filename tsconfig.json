{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDirs": ["./src", "./test"],
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  }
}
